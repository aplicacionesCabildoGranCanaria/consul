        <span class="show-for-small-only"><%= t("layouts.header.mapa")%> </span>
      <% end %>
    </li>
    <li class="eventos">
      <%= link_to "/eventos", class: "eventos  #{"active" if controller_name == "eventos"}", accesskey: "m"  do %>
        <h1 class="hide-for-small-only"> <%= t("layouts.header.eventos")%></h1>
        <span class="show-for-small-only"><%= t("layouts.header.eventos")%> </span>
      <% end %>
    </li>
  </ul>
</div>


